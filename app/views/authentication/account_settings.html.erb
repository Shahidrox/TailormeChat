<div id="page-content" style="min-height: 120px;">
<%= render partial: "layouts/page_top" %>




<div class="block block-themed">
<div class="block-title">
<h4>Profile <small>Edit</small></h4>
</div>
<div class="block-content">

<div class="form-horizontal">
<%= form_for @user, :as => :user, :url => account_settings_path, :method => :put do |f| %>
<div class="row">
<div class="col-md-6">
<div class="form-group">
<label class="control-label col-md-12 text-left" for="val_password">Current password</label>
<div class="col-md-8">
<div class="input-group">
<span class="input-group-addon"><i class="fa fa-asterisk fa-fw"></i></span>
<%= f.password_field :password, :class=>"form-control" %>
<%= show_field_error(@user, :password) %>
</div>
</div>
</div>
<div class="form-group">
<label class="control-label col-md-12 text-left" for="val_username">Username</label>
<div class="col-md-8">
<div class="input-group">
<span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
<%= f.text_field :username, :class=>"form-control", :disabled=>true %>
<%= show_field_error(@user, :username) %>
</div>
</div>
</div>
<div class="form-group">
<label class="control-label col-md-12 text-left" for="val_email">Email</label>
<div class="col-md-8">
<div class="input-group">
<span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
<%= f.text_field :email, :class=>"form-control", :disabled=>true %>
<%= show_field_error(@user, :email) %>
</div>
</div>
</div>
<div class="form-group">
<label class="control-label col-md-12 text-left" for="val_password">New password</label>
<div class="col-md-8">
<div class="input-group">
<span class="input-group-addon"><i class="fa fa-asterisk fa-fw"></i></span>
<%= f.password_field :new_password, :class=>"form-control" %>
<%= show_field_error(@user, :new_password) %>
</div>
</div>
</div>
<div class="form-group">
<label class="control-label col-md-12 text-left" for="val_confirm_password">Retype Password</label>
<div class="col-md-8">
<div class="input-group">
<span class="input-group-addon"><i class="fa fa-asterisk fa-fw"></i></span> 
<%= f.password_field :new_password_confirmation, :class=>"form-control" %>
<%= show_field_error(@user, :new_password_confirmation) %>
</div>
</div>
</div>
<div class="form-group">
<label class="control-label col-md-12 text-left" for="val_website">Shop name</label>
<div class="col-md-6">
<div class="input-group">
<span class="input-group-addon"><i class="fa fa-globe fa-fw"></i></span>
<%#= f.text_field :shop_name, :class=>"form-control" %>
<select id="user_shop_name" name="user[shop_name]" class="form-control" size="1">
	<option value="">Please select shop name</option>	
	<option value="tmo-sg.myshopify.com">tmo-sg.myshopify.com</option>
	<option value="tmo-profile.myshopify.com">tmo-profile.myshopify.com</option>
</select>
<%= show_field_error(@user, :shop_name) %>
</div>
</div>
</div>
</div>

</div>
<div class="form-group form-actions">
<div class="col-md-12">
<button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Submit</button>
</div>
</div>
<%end%>
</div>
</div>
</div>





</div>